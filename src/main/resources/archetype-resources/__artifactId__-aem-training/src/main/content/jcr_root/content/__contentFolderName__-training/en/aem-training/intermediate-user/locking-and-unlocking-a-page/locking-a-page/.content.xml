#set( $symbol_pound = '#' )
#set( $symbol_dollar = '$' )
#set( $symbol_escape = '\' )
<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:mix="http://www.jcp.org/jcr/mix/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:Page">
    <jcr:content
        cq:tags="[${contentFolderName}:content-type/page]"
        cq:template="/conf/${confFolderName}-training/settings/wcm/templates/twocolumn"
        jcr:isCheckedOut="{Boolean}true"
        jcr:mixinTypes="[mix:lockable,mix:versionable]"
        jcr:primaryType="cq:PageContent"
        jcr:title="Locking a Page"
        sling:resourceType="${appsFolderName}/components/template/column/two">
        <article
            jcr:primaryType="nt:unstructured"
            sling:resourceType="/apps/${appsFolderName}/components/layout/article">
            <par
                jcr:primaryType="nt:unstructured"
                sling:resourceType="${appsFolderName}/components/layout/container">
                <page-details
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="${appsFolderName}/components/details/page-details"/>
                <pagelist
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="${appsFolderName}/components/lists/pagelist"
                    componentTheme="[]"
                    listFrom="children"
                    listType="list"
                    parentPage="/content/${contentFolderName}-training/en/aem-training/intermediate-user/locking-and-unlocking-a-page"
                    printStructure="{Boolean}true"
                    tagsMatch="any"/>
                <contentblock
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="${appsFolderName}/components/layout/contentblock"
                    componentTheme="[]"
                    hideTitle="true"
                    hideTitleSeparator="true">
                    <par
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="${appsFolderName}/components/layout/container">
                        <text
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="${appsFolderName}/components/content/text"
                            componentTheme="[]"
                            text="&lt;p>A page can be locked from the &lt;b>Sites&lt;/b> console:&lt;/p>&${symbol_pound}xa;&lt;ul>&${symbol_pound}xa;&lt;li>Select the lock icon:&lt;br>&${symbol_pound}xa;&lt;img src=&quot;/content/dam/${contentFolderName}-training/Locking_Unlocking-Lock_Button.png&quot;>&lt;/li>&${symbol_pound}xa;&lt;/ul>&${symbol_pound}xa;"
                            textIsRich="true"/>
                        <text_780310012
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="${appsFolderName}/components/content/text"
                            componentTheme="[]"
                            text="&lt;ul>&${symbol_pound}xa;&lt;li>A message will be shown to confirm that the page has been locked. The toolbar icons and the card/list view information for that page will be updated.&lt;/li>&${symbol_pound}xa;&lt;/ul>&${symbol_pound}xa;&lt;p>A page can also be locked when editing the page itself:&lt;/p>&${symbol_pound}xa;&lt;ul>&${symbol_pound}xa;&lt;li>Select the &lt;b>Page Information&lt;/b> icon to open the menu.&lt;/li>&${symbol_pound}xa;&lt;li>Select the &lt;b>Lock Page&lt;/b> option.&lt;/li>&${symbol_pound}xa;&lt;/ul>&${symbol_pound}xa;"
                            textIsRich="true"/>
                        <image_1708799629
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="${appsFolderName}/components/media/image"
                            fileReference="/content/dam/${contentFolderName}-training/Locking_Unlocking-Lock_from_Page_Info.png"
                            imageOption="fixedImageGenerated"
                            imageRotate="0"
                            width="300"/>
                        <text_2107766595
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="${appsFolderName}/components/content/text"
                            componentTheme="[]"
                            text="&lt;ul>&${symbol_pound}xa;&lt;li>A message will confirm that the page has been locked. The toolbar is updated and the following icon shows that the page is now locked:&lt;br>&${symbol_pound}xa;&lt;img src=&quot;/content/dam/${contentFolderName}-training/Locking_Unlocking-Lock_Icon.png&quot;>&lt;/li>&${symbol_pound}xa;&lt;/ul>&${symbol_pound}xa;"
                            textIsRich="true"/>
                        <text_229246629
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="${appsFolderName}/components/content/text"
                            text="&lt;p>&amp;nbsp;&lt;/p>&${symbol_pound}xa;&lt;p>&amp;nbsp;&lt;/p>&${symbol_pound}xa;&lt;p>&amp;nbsp;&lt;/p>&${symbol_pound}xa;"
                            textIsRich="true"/>
                    </par>
                </contentblock>
            </par>
        </article>
    </jcr:content>
</jcr:root>
