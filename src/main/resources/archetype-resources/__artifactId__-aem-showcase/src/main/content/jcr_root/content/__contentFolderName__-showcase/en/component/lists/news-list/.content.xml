#set( $symbol_pound = '#' )
#set( $symbol_dollar = '$' )
#set( $symbol_escape = '\' )
<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:Page">
    <jcr:content
        cq:tags="[${contentFolderName}-showcase:content-type/page]"
        cq:template="/conf/${confFolderName}-showcase/settings/wcm/templates/onecolumn"
        jcr:primaryType="cq:PageContent"
        jcr:title="News List"
        sling:resourceType="${appsFolderName}/components/template/base">
        <article
            jcr:primaryType="nt:unstructured"
            sling:resourceType="${appsFolderName}/components/layout/article">
            <par
                jcr:primaryType="nt:unstructured"
                sling:resourceType="${appsFolderName}/components/layout/container">
                <page-details
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="${appsFolderName}/components/details/page-details"/>
                <contentblock
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="${appsFolderName}/components/layout/contentblock"
                    componentTheme="[]"
                    hideTitle="false"
                    hideTitleSeparator="true"
                    title="Default Badge"
                    variant="advsection">
                    <par
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="${appsFolderName}/components/layout/container">
                        <newslist
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="${appsFolderName}/components/lists/newslist"
                            componentId="newsListDefaultBadge"
                            cssClassItem="dated"
                            cssClassListContainer="page_list"
                            listFrom="children"
                            listType="list"
                            parentPage="/content/${contentFolderName}-showcase/en/content/news"
                            tagsMatch="any"/>
                    </par>
                </contentblock>
                <contentblock_1176348862
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="${appsFolderName}/components/layout/contentblock"
                    componentTheme="[]"
                    hideTitle="false"
                    hideTitleSeparator="true"
                    title="Default Badge with Pagination"
                    variant="advsection">
                    <par
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="${appsFolderName}/components/layout/container">
                        <newslist
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="${appsFolderName}/components/lists/newslist"
                            componentId="newsListDefaultBadgePagination"
                            cssClassItem="dated"
                            cssClassListContainer="page_list"
                            limit="5"
                            listFrom="children"
                            listType="list"
                            pageMax="2"
                            paginationType="loadMorePages"
                            parentPage="/content/${contentFolderName}-showcase/en/content/news"
                            tagsMatch="any"/>
                    </par>
                </contentblock_1176348862>
                <contentblock_243122057
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="${appsFolderName}/components/layout/contentblock"
                    componentId="newsListCategoryTitlePublishDate"
                    componentTheme="[]"
                    hideTitle="false"
                    hideTitleSeparator="true"
                    title="Badge - Category Title Publish Date"
                    variant="advsection">
                    <par
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="${appsFolderName}/components/layout/container">
                        <newslist
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="${appsFolderName}/components/lists/newslist"
                            detailsBadge="categoryTitlePublishDate"
                            listFrom="children"
                            listType="list"
                            parentPage="/content/${contentFolderName}-showcase/en/content/news"
                            printStructure="false"
                            tagsMatch="any"
                            variant="masonry"/>
                    </par>
                </contentblock_243122057>
                <contentblock_196070215
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="${appsFolderName}/components/layout/contentblock"
                    componentId="newslist4"
                    hideTitle="false"
                    hideTitleSeparator="true"
                    title="Badge - Image Title Description Category (Masonry)"
                    variant="advsection">
                    <par
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="${appsFolderName}/components/layout/container">
                        <newslist
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="${appsFolderName}/components/lists/newslist"
                            cssClassItem="dated"
                            detailsBadge="imageTitleDescriptionCategory"
                            listFrom="static"
                            listType="list"
                            pages="[/content/${contentFolderName}-showcase/en/content/news/2016/01/article2,/content/${contentFolderName}-showcase/en/content/news/2016/01/article1,/content/${contentFolderName}-showcase/en/content/news/2016/01/article11,/content/${contentFolderName}-showcase/en/content/news/2016/01/article12,/content/${contentFolderName}-showcase/en/content/news/2016/01/article13,/content/${contentFolderName}-showcase/en/content/news/2016/01/article3]"
                            parentPage="/content/${contentFolderName}-showcase/en/content/news/2016/01"
                            printStructure="false"
                            tagsMatch="any"/>
                    </par>
                </contentblock_196070215>
                <text
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="${appsFolderName}/components/content/text"
                    text="&lt;h2>&lt;b>Badge - Image Title Description Category (Grid )&lt;br>&${symbol_pound}xa; &lt;/b>&lt;/h2>&${symbol_pound}xa;"
                    textIsRich="true"/>
                <newslist
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="${appsFolderName}/components/lists/newslist"
                    componentId="newslist5"
                    cssClassItem="dated"
                    cssClassListContainer="page_grid"
                    detailsBadge="imageTitleDescriptionCategoryGrid"
                    listFrom="static"
                    listType="list"
                    pages="[/content/${contentFolderName}-showcase/en/content/news/2016/01/article2,/content/${contentFolderName}-showcase/en/content/news/2016/01/article1,/content/${contentFolderName}-showcase/en/content/news/2016/01/article11,/content/${contentFolderName}-showcase/en/content/news/2016/01/article12,/content/${contentFolderName}-showcase/en/content/news/2016/01/article13,/content/${contentFolderName}-showcase/en/content/news/2016/01/article3]"
                    parentPage="/content/${contentFolderName}-showcase/en/content/news/2016/01"
                    tagsMatch="any"/>
            </par>
        </article>
    </jcr:content>
</jcr:root>
