#set( $symbol_pound = '#' )
#set( $symbol_dollar = '$' )
#set( $symbol_escape = '\' )
<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:mix="http://www.jcp.org/jcr/mix/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:Page">
    <jcr:content
        cq:tags="[${contentFolderName}-showcase:content-type/page]"
        cq:template="/conf/${confFolderName}-showcase/settings/wcm/templates/twocolumn"
        jcr:isCheckedOut="{Boolean}true"
        jcr:mixinTypes="[mix:versionable]"
        jcr:primaryType="cq:PageContent"
        jcr:title="Icons"
        sling:resourceType="${appsFolderName}/components/template/base">
        <article
            jcr:primaryType="nt:unstructured"
            sling:resourceType="${appsFolderName}/components/layout/article">
            <par
                jcr:primaryType="nt:unstructured"
                sling:resourceType="${appsFolderName}/components/layout/container">
                <page-details
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="${appsFolderName}/components/details/page-details">
                </page-details>
                <text
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="${appsFolderName}/components/content/text"
                    text="&lt;h6>Follow Us&lt;/h6>&${symbol_pound}xa;"
                    textIsRich="true"/>
                <contentblock
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="${appsFolderName}/components/layout/contentblock"
                    hideTitle="true"
                    hideTitleSeparator="true">
                    <par
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="${appsFolderName}/components/layout/container">
                        <pagelist
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="${appsFolderName}/components/lists/pagelist"
                            cssClassListContainer="social_links"
                            detailsBadge="icon"
                            listFrom="children"
                            listType="list"
                            printStructure="true"
                            tagsMatch="any"/>
                    </par>
                </contentblock>
            </par>
        </article>
    </jcr:content>
    <facebook/>
    <twitter/>
</jcr:root>
